{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"ignore": [
			"dist",
			"node_modules",
			".next",
			"*.json"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {},
			"style": {
				"noUnusedTemplateLiteral": "off"
			}
		}
	}
}